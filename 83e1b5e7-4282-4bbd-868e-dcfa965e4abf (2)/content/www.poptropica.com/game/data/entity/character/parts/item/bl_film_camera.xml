<part>
	<id>bl_film_camera</id>
	<type>item</type>
	<costumizable>false</costumizable>
	<specialAbility id="PlayerSay">
		<triggerable>true</triggerable>
		<useButton>true</useButton>
		<actions>
			<actionChain id="before_actions">
				<action class="AnimationAction" noWait="true">
					<parameters>
						<param id="char" type="entity">player</param> 
						<param id="animClass" type="class">game.data.animation.entity.character.Salute</param> 
					</parameters>
				</action>
				<action class="TalkAction">
					<parameters>
						<param id="char" type="entity">player</param> 
						<param id="say_id" type="string">Action</param> 
						<param id="directSayText" type="boolean">true</param> 
					</parameters>
				</action>
			</actionChain>
		</actions>
	</specialAbility>
	<components>
		<component class="game.components.entity.character.part.item.ItemMotion"></component>
  	</components>
</part>