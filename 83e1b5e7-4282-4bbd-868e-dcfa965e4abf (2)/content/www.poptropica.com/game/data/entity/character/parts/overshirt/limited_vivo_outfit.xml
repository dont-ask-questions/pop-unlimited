<part>
	<id>limited_vivo_outfit</id>
	<type>overshirt</type>
	<costumizable>false</costumizable>
	<hide>
		<part>arm1</part>
		<part>arm2</part>
		<part>hand1</part>
		<part>hand2</part>
	</hide>
	<retrieveColors>
		<part id="skinColor">skinColor</part>
	</retrieveColors>
	<colors>
		<color id="skinColor"/>
	</colors>
	<colorables>
		<colorable id="skinColor">
			<clip instanceName="skinShape"/>
			<clip instanceName="skinShape2"/>
			<clip instanceName="skinShape3"/>
			<clip instanceName="skinShape4"/>
			<clip instanceName="skinShape5"/>
		</colorable>
	</colorables>
	
	<specialAbility>
		<className>game.data.specialAbility.SpecialAbility</className>
		<triggerable>true</triggerable>
		<useButton>true</useButton>
		<parameters>
			<param id="tracking">VivoQuest,drum</param>
		</parameters>
		<actions>
			<actionChain id="before_actions">
			  <action class="AudioAction">
			   <parameters>
				<param id="target" type="entity">player</param>
				<param id="soundUrl" type="string">effects/drum_short.mp3</param>
			   </parameters>
			  </action>
			</actionChain>
		</actions>
	</specialAbility>
</part>