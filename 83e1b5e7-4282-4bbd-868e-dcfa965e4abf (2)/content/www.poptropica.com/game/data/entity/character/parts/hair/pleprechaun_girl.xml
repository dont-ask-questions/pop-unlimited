<part>
	<id>pleprechaun_girl</id>
	<type>hair</type>
	<costumizable>false</costumizable>
	<gender>female</gender>
	
	<retrieveColors>
		<part id="hairColor">hairColor</part>
	</retrieveColors>
	<colors>
		<color id="hairColor"/>
	</colors>
	<colorables>
		<colorable id="hairColor">
			<clip instanceName="hairShape"/>
		</colorable>
	</colorables>
	
	<specialAbility>
		<className>game.data.specialAbility.SpecialAbility</className>
		<triggerable>true</triggerable>
		<useButton>true</useButton>
		<actions>
			<actionChain id="before_actions">
				<action class="AnimationAction" noWait="true">
					<parameters>
						<param id="char" type="entity">player</param> 
						<param id="animationClass" type="class">game.data.animation.entity.character.LeprechanJig</param> 
					</parameters>
				</action>
			</actionChain>
		</actions>
	</specialAbility>
</part>