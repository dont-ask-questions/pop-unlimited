	</sound>
	
	<sound type="effects" action="impact">
		<asset id="popsicle">ls_wood_plank_01.mp3, ls_wood_plank_02.mp3</asset>
		<asset id="straw">ls_linoleum_01.mp3, ls_linoleum_02.mp3</asset>
