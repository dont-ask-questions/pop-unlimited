<sounds>
	<sound type="music">
		<asset loop="true" fade="true" exclusiveType="true">Virus_Hunter_Main_Theme.mp3</asset>
	</sound>
	
	<sound type="effects">
		<!-- effects defined without an id default to 'scene sounds' with no positioning.  They can be triggered by events. -->
		<asset triggeredByEvent="playVanSound">car_drive_away_01.mp3</asset>
		<asset triggeredByEvent="playSlamSound">metal_impact_16.mp3</asset>
		<asset triggeredByEvent="playBagSound">sand_bag_01.mp3</asset>
	</sound>
	
	<sound type="effects" action="doorOpened">
		<asset id="exitCondo">door_pushbar_open_01.mp3</asset>
	</sound>
	
	<sound type="effects" action="impact">
		<asset id="dirt">ls_dirt_01.mp3, ls_dirt_02.mp3</asset>
		<asset id="general_metal">ls_general_metal_01.mp3, ls_general_metal_02.mp3</asset>
		<asset id="general_rubbish">ls_general_rubbish_01.mp3, ls_general_rubbish_02.mp3</asset>
		<asset id="concrete">ls_concrete_01.mp3, ls_concrete_02.mp3</asset>
		<asset id="cardboard">ls_cardboard_01.mp3, ls_cardboard_02.mp3</asset>
		<asset id="metal">ls_metal_01.mp3, ls_metal_02.mp3</asset>
		<asset id="baseGround">ls_concrete_01.mp3, ls_concrete_02.mp3</asset>
	</sound>
	
	<sound type="effects" action="step">
		<asset id="dirt">fs_dirt_01.mp3, fs_dirt_02.mp3, fs_dirt_03.mp3, fs_dirt_04.mp3</asset>
		<asset id="general_metal">fs_general_metal_01.mp3, fs_general_metal_02.mp3, fs_general_metal_03.mp3, fs_general_metal_04.mp3</asset>
		<asset id="general_rubbish">fs_general_rubbish_01.mp3, fs_general_rubbish_02.mp3, fs_general_rubbish_03.mp3, fs_general_rubbish_04.mp3</asset>
		<asset id="concrete">fs_concrete_01.mp3, fs_concrete_02.mp3, fs_concrete_03.mp3, fs_concrete_04.mp3</asset>
		<asset id="cardboard">fs_cardboard_01.mp3, fs_cardboard_02.mp3, fs_cardboard_03.mp3, fs_cardboard_04.mp3</asset>
		<asset id="metal">fs_metal_01.mp3, fs_metal_02.mp3, fs_metal_03.mp3, fs_metal_04.mp3</asset>
		<asset id="baseGround">fs_concrete_01.mp3, fs_concrete_02.mp3, fs_concrete_03.mp3, fs_concrete_04.mp3</asset>
	</sound>
</sounds>