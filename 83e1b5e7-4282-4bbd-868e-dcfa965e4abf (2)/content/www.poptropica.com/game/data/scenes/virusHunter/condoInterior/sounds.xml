	<sound type="music">
		<asset loop="true" fade="true" exclusiveType="true">Carrot_ShopTheme.mp3</asset>
	</sound>
	
	<sound type="ambient">
		<asset loop="true" fade="true" exclusiveType="true">room_tone.mp3</asset>
	</sound>
	
	<sound type="effects" action="doorOpened">
