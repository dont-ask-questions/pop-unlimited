<groups>
	<group event="cat_following">
		<and>
			<event type="milk_given"/>
			<event not="true" type="cat_returned"/>
		</and>
	</group>
	<group event="set_cat_in_farm" triggerAndSave="true">
		<and>
			<event not="true" type="cat_returned"/>
		</and>
	</group>
	
	<group event="drone_normal_1" triggerAndSave="true">
