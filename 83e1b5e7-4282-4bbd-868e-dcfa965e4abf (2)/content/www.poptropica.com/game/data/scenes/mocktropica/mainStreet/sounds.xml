<sounds>
	<sound type="ambient">
		<asset event="set_rain" loop="true" faded="true" exclusiveType="true">rain_light.mp3</asset>
		<asset event="set_night" loop="true" faded="true" exclusiveType="true">cricket_chirp_loop_01.mp3</asset>
	</sound>
	
	<sound type="music">
		<asset loop="true" event="set_day">MocktropicaMainThemeGlitched.mp3</asset>
		<asset loop="true" event ="developer_returned">MocktropicaMainTheme.mp3</asset>
		<asset loop="true" event ="set_night">night_theme.mp3</asset>
		<asset loop="true" triggeredByEvent="show_evil_managers" exclusiveType="true">mfb_battle_variation.mp3</asset>
		<asset loop="false" triggeredByEvent="show_cutscene" exclusiveType="true">mfb_battle_intro_loud.mp3</asset>
		<asset loop="true" triggeredByEvent="boss_transformed" exclusiveType="true">mfb_battle_variation.mp3</asset>
