<scene>
	<sceneType>shortmain</sceneType>
	<cameraLimits>
		<left>0</left>
		<top>0</top>
		<right>2800</right>
		<bottom>2800</bottom>	
	</cameraLimits>
	<bounds>
		<left>0</left>
		<top>-200</top>
		<right>2800</right>
		<bottom>2800</bottom>
	</bounds>
	<data>dialog.xml,doors.xml,sounds.xml,hits.xml</data>
	<layers>
		<layer>
			<condition type="blockMerge"/> <!-- Prevents backdrop from being merged into background -->
			<asset>backdrop.swf</asset>
			<rate>.5</rate>
		</layer>
		<layer>
			<bitmap>false</bitmap>
			<asset>background.swf</asset>
			<rate>1</rate>
		</layer>
		<layer hit="true">
			<asset>interactive.swf</asset>
			<rate>1</rate>
		</layer>
	</layers>
	<player>
		<defaultPosition>
			<x>50</x>
			<y>0</y>
		</defaultPosition>
		<defaultDirection>right</defaultDirection>
	</player>
</scene>