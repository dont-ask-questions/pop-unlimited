<scene>
	<sceneType>mainstreet</sceneType>
	<cameraLimits>
		<left>0</left>
		<top>0</top>
		<right>1600</right>
		<bottom>1100</bottom>		
	</cameraLimits>
	<bounds>
		<left>-100</left>
		<top>0</top>
		<right>1800</right>
		<bottom>1030</bottom>
	</bounds>
	<data>doors.xml,custom.xml,sounds.xml,hits.xml</data>
	<layers>
		<layer>
			<condition type="blockMerge"/> <!-- Prevents backdrop from being merged into background -->
			<asset>backdrop.swf</asset>
			<rate>.5</rate>
		</layer>
		<layer>
			<asset>backgroundtwo.swf</asset>
			<rate>1</rate>
		</layer>
			<layer>
			<asset>background.swf</asset>
			<rate>1</rate>
		</layer>
		<layer hit="true">
			<asset>interactive.swf</asset>
			<rate>1</rate>
		</layer>
	</layers>
	<player>
		<defaultPosition>
			<x>50</x>
			<y>0</y>
		</defaultPosition>
		<defaultDirection>right</defaultDirection>
	</player>
	<saveLocation>false</saveLocation>
</scene>