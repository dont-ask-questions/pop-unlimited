<item id="glyph_files">  
	<type>island</type>
	<subType>deepDive2</subType>
	
	<textfields>
		<text>
    		<value>Mysterious Glyphs</value>
  		</text>
  	</textfields>
	
	<assets>
  		<asset id="cardBack">
		<!-- Instead of the "shared" folder, you can also put the island card "background.swf" art inside the island folder you are using for all the other cards. EX - "items/"island_name"/background.swf" -->
			<assetPath>items/deepDive1/background.swf</assetPath>
			<!-- These effect settings change the color of the background card, you get the numbers from Flash's "Adjust Color" filter -->
			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>-5</brightness>
     			<contrast>0</contrast>
     			<saturation>-56</saturation>
     			<hue>8</hue>
    			</effect>
	    	</asset>
	    	<asset id="cardContent"/>
    </assets>
	
	<buttons>
		<btn>
    		<label>EXAMINE</label>
    		<actions>
				<action type="openPopup">
		  			<parameters>
		  				<param id="className">game.scenes.deepDive2.shared.popups.GlyphsPopup</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
	
</item>
