<item id="canvas">
  	<type>island</type>
  	<subType>ftue</subType>
  	
  	<textfields>
  		<text>
    		<value>Cloth</value>
  		</text>
  	</textfields>
  	
  	<buttons>
		<btn>
 			<label>USE</label>
			<actions>
				<action type="triggerEvent">
					<conditional id="inScene" isTrue="true"/>
	  				<parameters>
			  			<param id="event">use_canvas</param>
			  		</parameters>
			  	</action>
				<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="false"/>
		  			<parameters>
		  				<param id="event">cant_use_canvas</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
	
	<conditionals>
    	<conditional type="inScene">
    		<parameters>
		  		<param id="validScenes">game.scenes.ftue.mainLand.MainLand</param>
			</parameters>
    	</conditional>
    </conditionals>
	
  	<assets>
  		<asset id="cardBack">
  			<assetPath>items/ftue/background.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-60</saturation>
     			<hue>97</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
</item>