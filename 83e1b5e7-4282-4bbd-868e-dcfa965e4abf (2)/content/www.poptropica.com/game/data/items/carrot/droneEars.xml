<item id="droneEars">
	<type>island</type>
	<subType>carrot</subType>
	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	<textfields>
	 	<text>
      		<value>Drone Ears</value>
    	</text>
    	<text>
      		<value>These will will make you look like a bunny drone.</value>
      		<size>18</size>
      		<y>87</y>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<effect>
        		<name>adjustColorFilter</name>
        		<enabled>true</enabled>
        		<brightness>0</brightness>
        		<contrast>0</contrast>
        		<saturation>-20</saturation>
        		<hue>70</hue>
      		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
    
    <looks>
	    <look>
		 	<facial>rabbitcon2</facial>
	   	</look> 
	</looks> 

     <conditionals>
    	<conditional type="hasLook" />	<!-- if no lookId param is given uses first look by default -->
    </conditionals>
    
</item>