<item id="medal_arabian3"> <!-- Make sure the id name is the same as your .xml and the .swf art you want to load on the card -->
  	<type>island</type>
  	<subType>arab3</subType> <!-- Set subType to the location of card .swf art - bin/assets/items/"folder" -->

  	<textfields>
 		<text>
      		<value>Island Medallion</value>
    	</text>
    	<text>
      		<value>Congratulations!&#10;You have completed the&#10;Arabian Nights - Episode 3 quest.</value>
      		<size>18</size>
      		<y>65</y>
    	</text>
  	</textfields>
		
	<assets>
  		<asset id="cardBack">
			<assetPath>items/arab1/background.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>36</brightness>
     			<contrast>-17</contrast>
     			<saturation>9</saturation>
     			<hue>12</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
  	
	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
    			<label>PUT ON</label>
    			<actions>
					<action type="tiggerEvent">
			  			<parameters>
			  				<param id="event">useMedal</param>
						</parameters>
					</action>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
	
	<looks>
	    <look>
		 	<overshirt>medal_arabian1</overshirt>
	   	</look> 
	</looks>
</item>