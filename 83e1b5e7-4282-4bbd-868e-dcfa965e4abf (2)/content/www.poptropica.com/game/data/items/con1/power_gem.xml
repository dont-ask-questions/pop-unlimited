<item id="power_gem">
	<type>island</type>
	<subType>con1</subType>
	
	<buttons>
  		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	<textfields>
		<text id="title">
    		<value>Power Amulet</value>
  		</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-80</saturation>
     			<hue>25</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
    <looks>
	    <look>
		 	<overshirt>poptropicon_hero2</overshirt>
	   	</look> 
	</looks> 
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
</item>