<item id="timeDevice">
	<type>island</type>
	<subType>time</subType>
	<buttons>
		<btn>
    		<label>Use</label>
    		<actions>
				<action type="openPopup">
		  			<parameters>
		  				<param id="className">game.scenes.time.shared.TimeDeviceView</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
	<textfields>
		<text id="title">
    		<value>Time Device</value>
  		</text>
    	<text id="islandgray">
      		<value>This device has the ability to send you through time.</value>
      		<y>85</y>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>20</brightness>
     			<contrast>-10</contrast>
     			<saturation>-11</saturation>
     			<hue>10</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
</item>