<item id="vikingSuit">
	<type>island</type>
	<subType>time</subType>
	<buttons>
  		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook">
					<parameters>
						<param id="isPermanent">false</param>
					</parameters>
				</action>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	<textfields>
		<text id="title">
    		<value>Viking Suit</value>
  		</text>
    	<text>
      		<value>Your friends will be impressed when they see you in this!</value>
      		<size>18</size>
      		<y>89</y>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>-20</brightness>
     			<contrast>-3</contrast>
     			<saturation>0</saturation>
     			<hue>-37</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
    <looks>
	    <look>
		 	<pack>viking2</pack>
		 	<item>vikingaxe</item>
		 	<pants>viking2</pants>
		 	<overpants>viking2</overpants>
		 	<facial>viking3</facial>
	   	</look> 
	</looks> 
	
	<conditionals>
    	<conditional type="hasLook" />	<!-- if no lookId param is given uses first look by default -->
    </conditionals>
</item>
