<item id="phonograph">
	<type>island</type>
	<subType>time</subType>
	<buttons>
		<btn>
    		<label>PLAY</label>
    		<actions>
	    		<action type="triggerEvent">
		  			<parameters>
		  				<param id="event">phonograph_Sound</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
	<textfields>
		<text id="title">
    		<value>Phonograph</value>
  		</text>
  		
    	<text>
      		<value>This appears to be a Phonograph, a device for recording and playing sounds.</value>
      		<size>18</size>
      		<y>70</y>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>3</brightness>
     			<contrast>0</contrast>
     			<saturation>-49</saturation>
     			<hue>80</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
</item>