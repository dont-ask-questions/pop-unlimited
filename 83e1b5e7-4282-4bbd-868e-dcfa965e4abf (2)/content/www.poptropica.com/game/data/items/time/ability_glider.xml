<item id="ability_glider">
	<type>island</type>
	<subType>time</subType>
	<buttons>
  		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>
	<textfields>
		<text id="title">
    		<value>Glider</value>
  		</text>
    	<text id="islandgray">
      		<value>This will help you glide in the air.</value>
      		<size>18</size>
      		<width>190</width>
      		<y>89</y>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>3</brightness>
     			<contrast>0</contrast>
     			<saturation>-69</saturation>
     			<hue>-112</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
    <looks>
	    <look>
	    	<!-- the glider add the SlowFall (only in time) -->
		 	<pack>glider</pack>
	   	</look> 
	</looks> 
	
	<conditionals>
    	<conditional type="hasLook" />
    </conditionals>
</item>
