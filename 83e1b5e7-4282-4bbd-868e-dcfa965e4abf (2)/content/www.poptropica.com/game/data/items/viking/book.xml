<item id="book"> <!-- Make sure the id name is the same as your .xml and the .swf art you want to load on the card -->
	<type>island</type>
	<subType>viking</subType> <!-- Set subType to the location of card .swf art - bin/assets/items/"folder" -->

	<textfields>
  		<text>
    		<value>Poptropica Graphic Novel, Book 1</value>
			<size>20</size>
			<y>-193</y>
  		</text>
  	</textfields>

	<assets>
  		<asset id="cardBack">
			<!-- These effect settings change the color of the background card, you get the numbers from Flash's "Adjust Color" filter -->
			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-71</saturation>
     			<hue>150</hue>
    			</effect>
	    	</asset>
	    	<asset id="cardContent"/>
    </assets>

    <buttons>
  
		<btn>
    		<index>0</index>
      		<label>READ NOW</label>
      		<actions>
				<action type="gotoUrl">
	  				<parameters>
	  					<param id="urlId">http://www.poptropica.com/books/graphicnovel/</param> <!-- NOTE :: This should get pulled from campaign.xml -->
					</parameters>
				</action>
	  		</actions>
    	</btn>
		
	</buttons>
	
</item>