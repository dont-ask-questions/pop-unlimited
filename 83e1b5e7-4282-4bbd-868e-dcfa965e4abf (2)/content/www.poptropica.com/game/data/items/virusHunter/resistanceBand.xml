<item id="resistanceBand">
	<type>island</type>
	<subType>virusHunter</subType>
	<buttons>
		<btn>
			<label>USE</label>
			<actions>
	    		<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="true"/>
		  			<parameters>
		  				<param id="event">useResistanceBand</param>
					</parameters>
				</action>
				<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="false"/>
		  			<parameters>
		  				<param id="event">no_reason_to_use_item_default</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
	<textfields>
  		<text>
    		<value>Resistance Band</value>
   			<size>27</size>
  		</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-72</saturation>
     			<hue>138</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
    </assets>
    
    <conditionals>
    	<conditional type="inScene">
    		<parameters>
		  		<param id="validScenes">game.scenes.virusHunter.mainStreet.MainStreet</param>
			</parameters>
    	</conditional>
    </conditionals>
    
</item>
