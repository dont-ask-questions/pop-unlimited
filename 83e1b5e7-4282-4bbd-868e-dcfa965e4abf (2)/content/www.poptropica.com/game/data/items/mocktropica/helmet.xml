<item id="helmet">
	<type>island</type>
	<subType>mocktropica</subType>
	<textfields>
	 	<text id="title">
      		<value>Helmet</value>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-56</saturation>
     			<hue>52</hue>
    			</effect>
	    	</asset>
	    	<asset id="cardContent"/>
    </assets>
	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>EQUIP</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>REMOVE</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
	    
    <looks>
	    <look>
		 	<facial>mk_helmet</facial>
	   	</look> 
	</looks> 

     <conditionals>
    	<conditional type="hasLook" />	<!-- if no lookId param is given uses first look by default -->
    </conditionals>
    
</item>