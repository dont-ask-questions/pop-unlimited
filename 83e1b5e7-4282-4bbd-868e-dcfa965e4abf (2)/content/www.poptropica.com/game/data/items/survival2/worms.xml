<item id="worms">
	<type>island</type>
	<subType>survival2</subType>
	
	<buttons>
		<btn>
			<conditional id="usedItem" isTrue="true"/>
    		<label>USE</label>
    		<actions>
				<action type="setUserField">
		  			<parameters>
		  				<param id="userField">bait</param>
		  				<param id="value">worms</param>
					</parameters>
				</action>
				<action type="triggerEvent">
    				<parameters>
    					<param id="event">update_pole</param>
    				</parameters>
    			</action>
			</actions>
    	</btn>
    	<btn>
    		<conditional id="usedItem" isTrue="false"/>
    		<label>USE</label>
    		<actions>
    			<action type="triggerEvent">
    				<parameters>
    					<param id="event">no_put_on</param>
    				</parameters>
    			</action>
    		</actions>
    	</btn>
	</buttons>
	
	<textfields>
 		<text id="title">
      		<value>Worms</value>
    	</text>
  	</textfields>
  	
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/survival1/background.swf</assetPath>
  			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-60</saturation>
     			<hue>30</hue>
    		</effect>
    	</asset>
    	<asset id="cardContent"/>
	</assets>
	
	<conditionals>
		<conditional type="usedItem">
			<parameters>
				<param id="event">hook</param>
			</parameters>
		</conditional>
	</conditionals>
</item>