<item id="fishing_costume">
	<type>island</type>
	<subType>survival2</subType>
	<contentClass>
		<className>game.ui.card.CharacterContentView</className> 
		<parameters>
			<param id="gender">true</param>
		</parameters>
		<y>7</y>
	</contentClass>

	<buttons>
		<btn>
			<label>COSTUMIZE</label>
			<actions>
				<action type="costumize"/>
			</actions>
		</btn>
	</buttons>

	<textfields>
		<text id="title">
			<value>Fishing Suit</value>
			<y>-190</y>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack">
  			<assetPath>items/survival1/background.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-40</saturation>
     			<hue>0</hue>
    		</effect>
    	</asset>
	</assets>

	<looks>
		<look id="male"><!-- male -->
			<mouth>1</mouth>
			<marks>survival_scuff</marks>
			<overpants>survival_fishing</overpants>
			<hair>survival_luckyhat_boy</hair>
		</look>
		<look id="female"><!-- female -->
			<mouth>1</mouth>
			<marks>survival_scuff</marks>
			<overpants>survival_fishing</overpants>
			<hair>survival_luckyhat_girl</hair>
		</look>
	</looks>
</item>