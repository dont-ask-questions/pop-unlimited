<item id="cat"> <!-- Make sure the id name is the same as your .xml and the .swf art you want to load on the card -->
	<type>island</type>
	<subType>timmy</subType> <!-- Set subType to the location of card .swf art - bin/assets/items/"folder" -->

	<textfields>
  		<text>
    		<value>Senor Burrito</value>
		</text>
  	</textfields>

	<assets>
  		<asset id="cardBack">
			<!-- These effect settings change the color of the background card, you get the numbers from Flash's "Adjust Color" filter -->
			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-100</saturation>
     			<hue>-70</hue>
    			</effect>
	    	</asset>
	    	<asset id="cardContent"/>
    </assets>
	
	<buttons>
		<btn>
    		<label>USE</label>
    		<actions>
	    		<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="true"/>
		  			<parameters>
		  				<param id="event">use_cat</param>
					</parameters>
				</action>
				<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="false"/>
		  			<parameters>
		  				<param id="event">cant_use_cat</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
	
	<conditionals>
    	<conditional type="inScene">
    		<parameters>
		  		<param id="validScenes">game.scenes.timmy.school.School</param>
			</parameters>
    	</conditional>
    </conditionals>	
</item>