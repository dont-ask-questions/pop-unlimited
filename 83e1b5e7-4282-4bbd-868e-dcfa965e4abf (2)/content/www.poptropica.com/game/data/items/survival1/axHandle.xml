<item id="axHandle">
  	<type>island</type>
  	<subType>survival1</subType>
  	
	<buttons>
    	<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>EQUIP</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>PUT AWAY</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
  	
	<textfields>
  		<text>
    		<value>Axe Handle</value>
  		</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-40</saturation>
     			<hue>0</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
    
    <looks>
	    <look>
		 	<item>ax_handle</item>
	   	</look> 
	</looks> 
 
 	<conditionals>
    	<conditional type="hasLook" />	
    </conditionals>
</item>