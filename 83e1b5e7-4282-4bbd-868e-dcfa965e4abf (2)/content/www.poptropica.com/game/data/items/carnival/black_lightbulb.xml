<item id="black_lightbulb"> <!-- Make sure the id name is the same as your .xml and the .swf art you want to load on the card -->
	<type>island</type>
	<subType>carnival</subType> <!-- Set subType to the location of card .swf art - bin/assets/items/"folder" -->

	<textfields>
  		<text>
    		<value>Black Lightbulb</value>
  		</text>
  	</textfields>

	<assets>
  		<asset id="cardBack">
			<!-- These effect settings change the color of the background card, you get the numbers from Flash's "Adjust Color" filter -->
			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-92</saturation>
     			<hue>-115</hue>
    		</effect>
	    	</asset>
	    	<asset id="cardContent"/>
    </assets>

	<buttons>
		<btn>
    		<label>USE</label>
    		<actions>
	    		<action type="addGroup">
		  			<parameters>
		  				<param id="className">game.scenes.carnival.shared.UseBlackLightBulbGroup</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
</item>