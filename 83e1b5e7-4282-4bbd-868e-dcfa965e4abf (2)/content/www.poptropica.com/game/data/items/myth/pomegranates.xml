<item id="pomegranates">
  	<type>island</type>
  	<subType>myth</subType>
  	<buttons>
  		<btn>
  			<label>USE</label>
			<actions>
	    		<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="true"/>
		  			<parameters>
		  				<param id="event">hades_offering</param>
					</parameters>
				</action>
				<action type="triggerEvent">
	    			<conditional id="inScene" isTrue="false"/>
		  			<parameters>
		  				<param id="event">no_reason_to_use_item_default</param>
					</parameters>
				</action>
			</actions>
		</btn>
	</buttons>
  	<textfields>
 		<text>
      		<value>Pomegranates</value>
    	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/myth/background_star.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-55</saturation>
     			<hue>-81</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
    
    <conditionals>
    	<conditional type="inScene">
    		<parameters>
		  		<param id="validScenes">game.scenes.myth.hadesTemple.HadesTemple</param>
			</parameters>
    	</conditional>
    </conditionals>
</item>
