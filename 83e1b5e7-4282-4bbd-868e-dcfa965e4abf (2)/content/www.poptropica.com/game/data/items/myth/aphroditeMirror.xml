<item id="aphroditeMirror">
  	<type>island</type>
  	<subType>myth</subType>
  	<buttons>
	    	<btn>
	      		<label>USE</label>
	      		<actions>
					<action type="openPopup">
			  			<parameters>
			  				<param id="className">game.scenes.myth.shared.Mirror</param>
						</parameters>
					</action>
				</actions>
	    	</btn>
  	</buttons>
  	<textfields>
 		<text>
      		<value>Touchscreen Mirror</value>
    	</text>
    	<text>
      		<value>This mirror can take you to the realms of the major gods.</value>
      		<size>18</size>
      		<y>90</y>
      		<width>223</width>
      		<textColor>0x806F73</textColor>
      	</text>
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/myth/background_star.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-55</saturation>
     			<hue>-64</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
</item>