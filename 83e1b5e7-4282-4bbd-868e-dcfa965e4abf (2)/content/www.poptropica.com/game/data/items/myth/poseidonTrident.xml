<item id="poseidonTrident">
  	<type>island</type>
  	<subType>myth</subType>
  	<buttons>
    	<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
  	</buttons>
  	<textfields>
 		<text>
      		<value>Poseidon's Trident</value>
    	</text>
    	
      	<text>
  			<conditional id="checkIfMobile" isTrue="false"></conditional>
      		<value>Press SPACEBAR to unleash the power!</value>
      		<size>18</size>
      		<y>90</y>
      		<width>150</width>
      		<textColor>0x49464E</textColor>
    	</text>
    	<text>
  			<conditional id="checkIfMobile" isTrue="true"></conditional>
      		<value>Tap the ACTION button to unleash the power!</value>
      		<size>18</size>
      		<y>70</y>
      		<width>150</width>
      		<textColor>0x49464E</textColor>
    	</text>
    	
  	</textfields>
	<assets>
  		<asset id="cardBack">
  			<assetPath>items/myth/background_star.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-42</saturation>
     			<hue>-142</hue>
    		</effect>
    	</asset>
   		<asset id="cardContent"/>
    </assets>
    
    <looks>
	    <look>
		 	<item>poseidon</item>
	   	</look> 
	</looks> 

     <conditionals>
    	<conditional type="hasLook" />	
		<conditional type="checkIfMobile">
		
		</conditional>
    </conditionals>
</item>
