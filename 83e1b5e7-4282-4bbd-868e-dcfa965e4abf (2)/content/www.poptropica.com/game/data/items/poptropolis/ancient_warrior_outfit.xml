<item id="ancient_warrior_outfit">
	<type>island</type>
	<subType>poptropolis</subType>
	<contentClass>
		<className>game.ui.card.CharacterContentView</className> 
		<parameters>
			<param id="gender">true</param>
		</parameters>
		<y>7</y>
	</contentClass>

	<buttons>
		<btn>
			<label>COSTUMIZE</label>
			<actions>
				<action type="costumize"/>
			</actions>
		</btn>
	</buttons>

	<textfields>
		<text id="title">
			<value>Ancient Warrior Outfit</value>
			<y>-190</y>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack">
			<effect> 
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>-2</brightness>
     			<contrast>4</contrast>
     			<saturation>-54</saturation>
     			<hue>-1</hue>
    		</effect>
		</asset>
		<asset id="cardContent"/>
	</assets>

	<looks>
		<look id="male"><!-- male -->
			<mouth>17</mouth>
			<marks>pgwarrior</marks>
			<facial>pgwarrior</facial>
			<shirt>empty</shirt>
			<pants>pgwarrior</pants>
		</look>
		<look id="female"><!-- female -->
			<mouth>17</mouth>
			<facial>pgwarrior</facial>
			<shirt>1</shirt>
			<pants>pgwarrior</pants>
		</look>
	</looks>
</item>