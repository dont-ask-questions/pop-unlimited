<item id="stick_of_gum">
	<type>island</type>
	<subType>prison</subType>
	
	<contentClass>
		<className>game.scenes.prison.shared.GumContentView</className>
	</contentClass>

	<textfields>
  		<text id="title">
    		<value>Sticks of Gum</value>
		</text>
  	</textfields>

	<assets>
  		<asset id="cardBack">
			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-77</saturation>
     			<hue>130</hue>
    			</effect>
	    	</asset>
	    	<asset id="cardContent"/>
    </assets>
    
	<buttons>
		<btn>
    		<label>USE</label>
    		<actions>
	    		<action type="triggerEvent">
		  			<parameters>
		  				<param id="event">use_gum</param>
					</parameters>
				</action>
			</actions>
  		</btn>
	</buttons>
</item>