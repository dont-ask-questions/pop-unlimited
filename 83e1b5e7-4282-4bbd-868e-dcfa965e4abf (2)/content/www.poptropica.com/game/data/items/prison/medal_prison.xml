<item id="medal_prison">
	<type>island</type>
	<subType>prison</subType>

	<textfields>
  		<text>
    		<value>Island Medallion</value>
		</text>
		<text>
      		<value>Congratulations!&#10;You have completed the&#10;Pelican Rock quest.</value>
      		<size>18</size>
      		<y>70</y>
    	</text>
  	</textfields>
  	
  	<buttons>
		<btn>
			<conditional id="hasLook" isTrue="false"/>
    		<label>PUT ON</label>
    		<actions>
				<action type="applyLook"/>
			</actions>
  		</btn>
  		<btn>
			<conditional id="hasLook" isTrue="true"/>
    		<label>TAKE OFF</label>
    		<actions>
				<action type="removeLook"/>
			</actions>
  		</btn>
	</buttons>

	<assets>
  		<asset id="cardBack">
  			<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>36</brightness>
     			<contrast>-17</contrast>
     			<saturation>9</saturation>
     			<hue>12</hue>
    			</effect>
	    	</asset>
	    <asset id="cardContent"/>
    </assets>
    
    <conditionals>
    		<conditional type="hasLook" />
    </conditionals>
    
    <looks>
	    <look>
		 	<overshirt>medal_prison</overshirt>
	   	</look> 
	</looks>  
</item>