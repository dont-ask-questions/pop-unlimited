<item id="omegon_costume">
	<type>island</type>
	<subType>con2</subType>
	<contentClass>
		<className>game.ui.card.CharacterContentView</className> 
		<parameters>
			<param id="gender">true</param>
		</parameters>
		<y>7</y>
	</contentClass>

	<buttons>
		<btn>
			<label>COSTUMIZE</label>
			<actions>
				<action type="costumize"/>
			</actions>
		</btn>
	</buttons>

	<textfields>
		<text id="title">
			<value>Omegon Suit</value>
			<y>-190</y>
		</text>
	</textfields>
	
	<assets>
		<asset id="cardBack">
  			<assetPath>items/con2/background.swf</assetPath>
       		<effect>
      			<name>adjustColorFilter</name>
      			<enabled>true</enabled>
      			<brightness>0</brightness>
     			<contrast>0</contrast>
     			<saturation>-40</saturation>
     			<hue>0</hue>
    		</effect>
    	</asset>
	</assets>

	<looks>
		<look id="male"><!-- male -->
			<marks>poptropicon_omegon2</marks>
			<facial>poptropicon_omegon</facial>
			<hair>poptropicon_omegon</hair>
			<pack>poptropicon_omegon2</pack>
			<overshirt>poptropicon_omegon2</overshirt>
		</look>
		<look id="female"><!-- female -->
			<marks>poptropicon_omegon2</marks>
			<facial>poptropicon_omegon</facial>
			<hair>poptropicon_omegon</hair>
			<pack>poptropicon_omegon2</pack>
			<overshirt>poptropicon_omegon2</overshirt>
		</look>
	</looks>
</item>