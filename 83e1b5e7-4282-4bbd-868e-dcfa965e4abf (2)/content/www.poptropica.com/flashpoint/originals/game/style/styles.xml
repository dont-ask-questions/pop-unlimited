<!-- The id tag in style accepts multiple names separated by commas -->
<!--  Accepted attributes and accepted values in the style

	<fontfamily> 		// Comma separated font families
	<size>				// Font size
	<color>				// Only hexadecimal colors #FF0000
	<bold>				// true or false
	<italic>			// true or false
	<underline>			// true or false
	<align>				// left, center, right, justify
	<leading>	    	// Numeric amount of space in between lines
	<marginleft>   		// Numeric amount of space from left margin
	<marginright>		// Numeric amount of space from right side
	<indent>			// Numeric indent amount
	<letterspacing>		// Numeric spacing in between the letters
	<verticalalign>		// true or false
	<shadow>			// sub categories defaults
		<alpha>			// Numeric alpha value = .15
		<color>			// Hexadecimal shadow color = #000000
		<offsetX>		// Numeric offset x to original textfield = -1
		<offsetY>		// Numeric offset y to original textfield = 2
	<effect>			// Can vary, same usage for card text

-->

